# Gmail API Configuration
# Get credentials from: https://console.cloud.google.com/apis/credentials
GMAIL_CREDENTIALS_FILE=credentials.json
GMAIL_TOKEN_FILE=token.json

# LLM Provider Configuration
# Options: "openai" or "groq"
LLM_PROVIDER=openai

# OpenAI Configuration
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# GROQ Configuration (alternative to OpenAI)
# Get API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=openai/gpt-oss-120b

# GROQ Parsing Model (fast/cheap model for markdown to JSON conversion)
GROQ_PARSING_MODEL=llama-3.1-8b-instant

# LLM Timeout (seconds)
LLM_TIMEOUT=180

# Batch Processing Configuration
DEFAULT_BATCH_SIZE=5
DEFAULT_EMAIL_LIMIT=50

# Task Cleanup Configuration (hours)
TASK_CLEANUP_HOURS=24

# Logging Configuration
# Options: DEBUG (verbose), INFO (normal), WARNING, ERROR
LOG_LEVEL=DEBUG

# API Key Protection (REQUIRED - backend refuses to start without it)
# Frontend sends this as X-API-Key header; backend validates on every /api/* request
API_KEY=

# CORS Origins (optional, comma-separated)
# If not set, allows all origins (for local dev). Set for production.
# Example: CORS_ORIGINS=http://your-vps-ip:3002,https://yourdomain.com
CORS_ORIGINS=
